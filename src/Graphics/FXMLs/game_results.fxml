<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Graphics.Controllers.GameResultsController"
      spacing="30"
      alignment="CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #1a2a6c, #b21f1f, #fdbb2d); -fx-padding: 40;">

    <Label text="Game Over!"
           style="-fx-font-size: 48px;
                  -fx-font-weight: bold;
                  -fx-text-fill: white;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 10, 0, 0, 0);"/>

    <Label fx:id="outcomeLabel"
           style="-fx-font-size: 42px;
                  -fx-font-weight: bold;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 0);"/>

    <VBox alignment="CENTER"
          spacing="20"
          style="-fx-background-color: rgba(255,255,255,0.15);
                 -fx-background-radius: 15;
                 -fx-padding: 30;">
        <Label text="Final Scores"
               style="-fx-font-size: 32px;
                      -fx-text-fill: white;
                      -fx-font-weight: bold;"/>

        <Label fx:id="playerScoreLabel"
               style="-fx-font-size: 28px;
                      -fx-text-fill: white;"/>

        <Label fx:id="computerScoreLabel"
               style="-fx-font-size: 28px;
                      -fx-text-fill: white;"/>
    </VBox>

    <Button text="Exit Game"
            onAction="#exitGame"
            style="-fx-font-size: 20px;
                   -fx-background-color: rgba(255,255,255,0.2);
                   -fx-text-fill: white;
                   -fx-background-radius: 25;
                   -fx-padding: 15 40;
                   -fx-cursor: hand;">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>
    </Button>
</VBox>